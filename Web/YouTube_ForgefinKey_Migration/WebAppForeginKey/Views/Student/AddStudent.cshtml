@model WebAppForeginKey.Models.student

@{
    ViewData["Title"] = "AddStudent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AddStudent</h1>

<h4>student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <p style="color:blue;">
            @ViewBag.success
        </p>
        <form asp-action="AddStudent" onsubmit="return func()">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="studname" class="control-label"></label>
                <input asp-for="studname" class="form-control" />
                <span asp-validation-for="studname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="phone" class="control-label"></label>
                <input asp-for="phone" class="form-control" />
                <span asp-validation-for="phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="skillid" class="control-label"></label>
                <select asp-for="skillid" class ="form-control" asp-items="ViewBag.skillid">
                    <option disabled selected>Selected skill</option>
                    @foreach (var i in ViewBag.getSkill){
                        <option value="@i.id">@i.skillname</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create"  class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script>

    function func() {
        return confirm("Are you sure you want to add data?");
    }
</script>