@model IEnumerable<ImageCRUD.Models.Tbl_ord>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.onm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.img)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.onm)
            </td>
            <td>
                @* @Html.DisplayFor(modelItem => item.img) *@
                <img src="@item.img" height="100" width="100" alt="@item.onm" />
            </td>
            <td>
                    @Html.ActionLink("Edit", "Edit", new { onm = item.onm }) |
                @Html.ActionLink("Details", "Details", new {  onm=item.onm }) |
                @Html.ActionLink("Delete", "Delete", new {  id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
