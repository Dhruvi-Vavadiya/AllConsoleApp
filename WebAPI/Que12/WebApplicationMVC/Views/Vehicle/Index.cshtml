@model IEnumerable<WebApplicationMVC.Models.Vehicle>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vcolor)
