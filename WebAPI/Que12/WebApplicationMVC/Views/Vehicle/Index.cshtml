            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vcolor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vprice)
            </td>
